
.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
}
.logo {
		height: 200rpx;
		width: 200rpx;
		margin-top: 200rpx;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 50rpx;
}
.text-area {
		display: flex;
		justify-content: center;
}
.title {
		font-size: 36rpx;
		color: #8f8f94;
}
.bottom-view {
		height: 240rpx;
		position: absolute;
		bottom: 0;
		width: 100%;
		background-color: white;
}
.bottom-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 160rpx;
		margin: 20rpx;
		height: 60rpx;
}
